{      
    "title": "Files Manager",
    "version": "1.5.4",
    "name": "files",
    "package-type": "template",
    "icon": "file",
    "thumbnail": "files-manager-thumbnail.jpg",
    "repository": "https://github.com/arikaim/files-template.git",
    "require": {
        "library": [
            "jquery",
            "arikaim:source",
            "arikaim-ui",
            "fomantic",  
            "plyr", 
            "pdf-js",      
            "highlight", 
            "tailwind"
        ],
        "extensions": [
            "users",
            "storage"
        ]
    },
    "routes": [
        {
            "path": "/",         
            "home": true,  
            "page": "home",
            "language-path": true,
            "name": "Home"                   
        },
        {
            "path": "/files",                   
            "page": "files",
            "language-path": true,
            "name": "Files"                   
        },
        {
            "path": "/about",           
            "page": "about",
            "language-path": true,
            "name": "About"                   
        }
    ],
    "languages": [
        "en"      
    ],
    "include": {     
        "components": [    
            "files:users",
            "components:modal"        
        ],         
        "css": [
            "files.css"
        ],        
        "library": [
            "jquery",             
            "filepond",               
            "arikaim",
            "arikaim-ui",
            "fomantic:transition",
            "fomantic:form",
            "fomantic:modal",
            "fomantic:icons",
            "fomantic:flags",
            "plyr",   
            "highlight",
            "pdf-js", 
            "tailwind",
            "tailwind:grid",
            "tailwind:colors",
            "tailwind:size",
            "tailwind:align",
            "tailwind:layout",
            "tailwind:animation"
        ]       
    }
}