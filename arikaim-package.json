{      
    "title": "Files Manager",
    "version": "1.2.0",
    "name": "files",
    "package-type": "template",
    "icon": "file",
    "thumbnail": "files-manager-thumbnail.jpg",
    "repository": "https://github.com/arikaim/files-template.git",
    "require": {
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "fomantic",  
            "plyr", 
            "pdf-js",      
            "highlight", 
            "tailwind"
        ],
        "extensions": [
            "users",
            "storage"
        ]
    },
    "routes": [
        {
            "path": "/",           
            "page": "files>home",
            "language-path": true,
            "name": "Home"                   
        },
        {
            "path": "/about",           
            "page": "files>about",
            "language-path": true,
            "name": "About"                   
        },
        {
            "path": "/privacy",           
            "page": "files>privacy",
            "language-path": true,
            "name": "privacy"                   
        }
    ],
    "languages": [
        "en"      
    ],
    "include": {     
        "components": [    
            "files>users",
            "components:modal"        
        ],         
        "css": [
            "files.css"
        ],        
        "library": [
            "jquery",    
            "filepond",               
            "arikaim:source",
            "arikaim-ui:source",
            "fomantic",
            "plyr",   
            "highlight",
            "pdf-js",   
            "tailwind:1.4.6"
        ],
        "loader": "components:loader.dimmer"
    }   
}